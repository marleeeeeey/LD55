{
  "main": {
    "fps": 60,
    "logLevel": "info"
  },
  "GameOptions": {
    // TODO2: Reorder the windowOptions to specific system
    "windowOptions": {
      "cameraScale": 2
    }
  },
  "Networking": {
    "debugSeverity": "k_ESteamNetworkingSocketsDebugOutputType_Everything"
  },
  "WeaponControlSystem": {
    "cellSizeForMicroDistruction": 2,
    "createSyntheticExplosionFragments": false,
    "keepTilesAliveOnExplosion": true
  },
  "CameraControlSystem": {
    "mousePosImpactOnCameraAnchor": false
  },
  "PlayerControlSystem": {
    "playerControlsWorksOnGroundOnly": false
  },
  "AudioSystem": {
    "masterVolume": 0.3
  },
  "RandomEventSystem": {
    "randomSoundEventInterval_sec": 10
  },
  "PhysicsSystem": {
    "velocityIterations": 1,
    "positionIterations": 1
  },
  "MapLoaderSystem": {
    "tileSplitFactor": 2
  },
  "ObjectsFactory": {
    // Gap between physical and visual objects. Used to prevent dragging of physical objects.
    // Also affects the destructibility of stacks of tiles. The smaller the gap, the easier it is to destroy the stack.
    // The bigger the gap, the harder it is to destroy the stack => less random destruction.
    "gapBetweenPhysicalAndVisual": 0,
    "numberOfHitsToDisableCollisionsForFragments": 7
  },
  "CoordinatesTransformer": {
    "box2DtoWorld": 48
  },
  "RenderHUDSystem": {
    "showGrid": false
  },
  "RenderWorldSystem": {
    "renderPlayerHitbox": false
  },
  "GameLogicSystem":
  {
    "portalEatPlayerWithDistance": 0.4,
    "portalMaxFoodCounter": 100
  }
}