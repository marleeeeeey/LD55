{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wofares (Windows) 1. Configure",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist ${workspaceFolder}\\build mkdir ${workspaceFolder}\\build && cmake -G \"Ninja\" DCMAKE_CXX_COMPILER=clang++ -B ${workspaceFolder}\\build -S ${workspaceFolder}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Wofares (Windows) 2. Build",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build"
    },
    {
      "label": "Wofares (Windows) 3. Run",
      "type": "shell",
      "command": "${workspaceFolder}/build/src/wofares.exe"
    }
  ]
}